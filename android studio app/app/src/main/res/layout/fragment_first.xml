        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="287dp"
        android:layout_height="93dp"
        android:layout_marginStart="92dp"
