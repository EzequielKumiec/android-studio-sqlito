        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnIrAArticulo"
        android:layout_width="166dp"
        android:layout_height="57dp"
        android:layout_marginStart="228dp"
        android:layout_marginTop="364dp"
